---
layout: null
---
{
  "texts": [
    {% for text in site.texts %}
      {
        "title": {{ text.title | jsonify }},
        "title_transliteration": {{ text.title_transliteration | default: "" | jsonify }},
        "url": {{ text.url | relative_url | jsonify }},
        "category": {{ text.category | default: "" | jsonify }},
        "author": {{ text.author | default: "" | jsonify }},
        "content": {{ text.content | strip_html | normalize_whitespace | jsonify }},
        "excerpt": {{ text.excerpt | default: text.content | strip_html | truncatewords: 50 | jsonify }}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ],
  "verses": [
    {% for verse in site.verses %}
      {
        "title": "{{ verse.text | capitalize }} {{ verse.chapter }}.{{ verse.verse }}",
        "url": {{ verse.url | relative_url | jsonify }},
        "text": {{ verse.text | default: "" | jsonify }},
        "chapter": {{ verse.chapter | jsonify }},
        "verse": {{ verse.verse | jsonify }},
        "devanagari": {{ verse.devanagari | default: "" | jsonify }},
        "transliteration": {{ verse.transliteration | default: "" | jsonify }},
        "translation": {{ verse.translation | default: "" | jsonify }},
        "content": {{ verse.content | strip_html | normalize_whitespace | jsonify }}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ],
  "pages": [
    {% for page in site.html_pages %}
      {% unless page.url contains '/assets/' or page.url contains '/example/' %}
      {
        "title": {{ page.title | default: "Untitled" | jsonify }},
        "url": {{ page.url | relative_url | jsonify }},
        "content": {{ page.content | strip_html | normalize_whitespace | jsonify }},
        "excerpt": {{ page.excerpt | default: page.content | strip_html | truncatewords: 50 | jsonify }}
      }{% unless forloop.last %},{% endunless %}
      {% endunless %}
    {% endfor %}
  ]
}
